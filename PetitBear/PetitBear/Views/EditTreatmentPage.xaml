<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetitBear.Views.EditTreatmentPage">
    <ContentPage.Content>
        <TableView Intent="Form" x:Name="TableForm">
            <TableRoot>

                <TableSection Title="Name">
                    <EntryCell Label="Treatment name" Text="{Binding Name}" />
                </TableSection>

                <TableSection Title="Contact">
                    <EntryCell Label="Period" Text="{Binding Period}"  />
                </TableSection>

                <TableSection>
                    <ViewCell>
                        <Button Text="Save" x:Name="Button_Save" />
                    </ViewCell>
                </TableSection>

            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>
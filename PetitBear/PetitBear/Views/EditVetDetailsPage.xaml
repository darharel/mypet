<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetitBear.Views.EditVetDetailsPage">
    <TableView Intent="Form" x:Name="TableForm">
        <TableRoot>

            <TableSection Title="Name">
                <EntryCell x:Name="entry_Name" Label="Veterinar name: " Text="{Binding Name}" />
                <EntryCell x:Name="entry_Address" Label="Address: " Text="{Binding Address}" />
            </TableSection>

            <TableSection Title="Contact">
                <EntryCell x:Name="entry_Period" Label="Period" Text="{Binding Period}"  />
                <EntryCell x:Name="entry_LastShot" Label="Last Shot taken:" Text="{Binding LastShot}"  />
            </TableSection>

            <TableSection>
                <ViewCell>
                    <Button x:Name="Button_Save" Text="Save"  />
                </ViewCell>
            </TableSection>

        </TableRoot>
    </TableView>
</ContentPage>